<div class="container">
    <h4 class="lead mb-3">
        Uploaded Images.
    </h4>

    <% if( images ){ %>
        <div class="row">
        <% for( var i= 0; i < images.length; i++){ %>
            <div class="col-md-3 mb-3">
                <div class="card" style="width: 100%;">
                    <img class="card-img-top" src="/uploads/files/<%= images[i].filename %>" alt="No image found." style="width:100%;height:200px;">
                    <div class="card-body">
                        <h5 class="card-title"><%= images[i].caption %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                            card's
                            content.</p>
                        <form action="/uploads/<%= images[i]._id %>?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-block">Delete Image</button>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
        </div>
    <%} else { %>
        <p>No Images have been uploaded yet.</p>
    <% }%>
</div>